<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"

    android:orientation="vertical"
    tools:context=".Vote_Main">

    <Button
        android:id="@+id/deleteListButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center|right"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/deletebtn"
        android:fontFamily="@font/nngt"
        android:foregroundGravity="center"
        android:gravity="center"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/AddBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center|right"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/plusbtn"
        android:fontFamily="@font/nngt"
        android:foregroundGravity="center"
        android:gravity="center"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/realVoteTitle"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:fontFamily="@font/nngt"
            android:gravity="center"
            android:text="Vote"
            android:textColor="#2c2c33"
            android:textSize="20sp" />

        <ListView
            android:id="@+id/voteListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/nngt"
            android:textColor="#000000"
            android:choiceMode = "singleChoice"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
